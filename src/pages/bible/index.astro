---
import { loadBibles, getNameFromBible } from "@utils/bible.astro";
const bibles = await loadBibles();
---

<h1>Bibles</h1>
{
  bibles.map((bible) => {
    return (
      <a href={`/bible/${getNameFromBible(bible)}/`}>
        {bible.osisText.header.work.title} ({getNameFromBible(bible)})
      </a>
    );
  })
}
